{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "jsx": "preserve",
        "noImplicitThis": true,
        "strict": true,
        "isolatedModules": true,
        "preserveValueImports": true,
        "importsNotUsedAsValues": "error",
        "target": "ESNext",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
      }
  }