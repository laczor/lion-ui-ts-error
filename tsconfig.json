{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "lib": ["es2017", "dom"],
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "composite": true,
        "emitDeclarationOnly": false,
        "alwaysStrict": true,
        "types": ["node"],
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleDetection": "legacy"
      },
}